<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#Carousel"
    manageTabs="function(tab,noSwitch){var tabs=['carousel','styleOptions','list','children','static','search','querybuilder','container'];var index=tabs.indexOf(tab);if(index==-1) return;for(var i=3;i&lt;tabs.length;i++){if(index==i){this.unhideTabStripItem(i);}else{this.hideTabStripItem(i);}}this.doLayout();if(!noSwitch)this.activate(index);}"
    title="Carousel"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <carousel
            jcr:primaryType="cq:Widget"
            title="Carousel"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <autoplay
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Boolean}true"
                    fieldLabel="Auto Play"
                    name="./autoPlay"
                    type="checkbox"
                    xtype="selection"/>
                <playSpeed
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Long}5000"
                    fieldDescription="Time in milliseconds until the next slide is shown."
                    fieldLabel="Play Speed"
                    id="playSpeed"
                    name="./playSpeed"
                    xtype="numberfield"/>
                <hoverPause
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Boolean}true"
                    fieldLabel="Pause on Hover"
                    name="./pauseHover"
                    type="checkbox"
                    xtype="selection"/>
                <showControls
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Boolean}true"
                    fieldLabel="Show Controls"
                    name="./showControls"
                    type="checkbox"
                    xtype="selection"/>
                <showOverlay
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Boolean}true"
                    fieldLabel="Show Overlays"
                    name="./showOverlay"
                    type="checkbox"
                    xtype="selection"/>
                <showIndicators
                    jcr:primaryType="cq:Widget"
                    defaultValue="{Boolean}true"
                    fieldLabel="Show Indicators"
                    name="./showIndicators"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </carousel>
        <styleOptions
            jcr:primaryType="cq:Widget"
            title="Style"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <cssclass1
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS classes to apply to element"
                    fieldLabel="Carousel CSS Class"
                    name="./cssClass"
                    validateOnBlur="true"
                    xtype="textfield"/>
                <cssstyle1
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS style string to apply to element"
                    fieldLabel="Carousel  CSS Style"
                    name="./cssStyle"
                    validateOnBlur="true"
                    xtype="textfield"/>
                <cssclass2
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS classes to apply to element"
                    fieldLabel="Slide CSS Class"
                    name="./slideCssClass"
                    validateOnBlur="true"
                    xtype="textfield"/>
                <cssstyle2
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS style string to apply to element"
                    fieldLabel="Slide CSS Style"
                    name="./slideCssStyle"
                    validateOnBlur="true"
                    xtype="textfield"/>
                <cssclass3
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS classes to apply to element"
                    fieldLabel="Navigation CSS Class"
                    name="./navigationCssClass"
                    validateOnBlur="true"
                    xtype="textfield"/>
                <cssstyle3
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS style string to apply to element"
                    fieldLabel="Navigation CSS Style"
                    name="./navigationCssStyle"
                    validateOnBlur="true"
                    xtype="textfield"/>
                <cssclass4
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS classes to apply to element"
                    fieldLabel="Indicator CSS Class"
                    name="./indicatorCssClass"
                    validateOnBlur="true"
                    xtype="textfield"/>
                <cssstyle4
                    jcr:primaryType="nt:unstructured"
                    allowBlank="true"
                    fieldDescription="Additional CSS style string to apply to element"
                    fieldLabel="Indicator CSS Style"
                    name="./indicatorCssStyle"
                    validateOnBlur="true"
                    xtype="textfield"/>
            </items>
        </styleOptions>
        <list
            jcr:primaryType="cq:Widget"
            title="List"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <listFrom
                    jcr:primaryType="cq:Widget"
                    defaultValue=""
                    fieldLabel="Build list using"
                    name="./listFrom"
                    type="select"
                    xtype="selection">
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        loadcontent="function(){this.findParentByType('tabpanel').manageTabs(this.getValue(),true);}"
                        selectionchanged="function(box,value){box.findParentByType('tabpanel').manageTabs(value);}"/>
                    <options jcr:primaryType="cq:WidgetCollection">
                        <container
                            jcr:primaryType="nt:unstructured"
                            text="Component Containers (parsys)"
                            value="container"/>
                        <children
                            jcr:primaryType="nt:unstructured"
                            text="Child pages"
                            value="children"/>
                        <static
                            jcr:primaryType="nt:unstructured"
                            text="Fixed list"
                            value="static"/>
                    </options>
                </listFrom>
                <orderBy
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Enter a property like 'jcr:created'"
                    fieldLabel="Order by"
                    name="./orderBy"
                    type="combobox"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <title
                            jcr:primaryType="nt:unstructured"
                            value="jcr:title"/>
                        <created
                            jcr:primaryType="nt:unstructured"
                            value="jcr:created"/>
                        <modified
                            jcr:primaryType="nt:unstructured"
                            value="cq:lastModified"/>
                        <template
                            jcr:primaryType="nt:unstructured"
                            value="cq:template"/>
                    </options>
                </orderBy>
            </items>
        </list>
        <children
            jcr:primaryType="cq:Widget"
            title="Child pages"
            xtype="panel">
            <listeners
                jcr:primaryType="nt:unstructured"
                render="function() { this.findParentByType('tabpanel').hideTabStripItem(3); }"/>
            <items jcr:primaryType="cq:WidgetCollection">
                <parentPage
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Leave empty to use current page"
                    fieldLabel="Parent page"
                    name="./parentPage"
                    xtype="pathfield"/>
                <childrenLimit
                    jcr:primaryType="cq:Widget"
                    defaultValue="5"
                    fieldDescription="Maximum number of items displayed in list"
                    fieldLabel="Limit"
                    name="./limit"
                    xtype="numberfield"/>
            </items>
        </children>
        <static
            jcr:primaryType="cq:Widget"
            title="Fixed list"
            xtype="panel">
            <listeners
                jcr:primaryType="nt:unstructured"
                render="function() { this.findParentByType('tabpanel').hideTabStripItem(4); }"/>
            <items jcr:primaryType="cq:WidgetCollection">
                <pages
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Click the '+' to add a new page"
                    fieldLabel="Pages"
                    name="./pages"
                    xtype="multifield">
                    <fieldConfig
                        jcr:primaryType="cq:Widget"
                        width="155"
                        xtype="pathfield"/>
                </pages>
                <pagesLimit
                    jcr:primaryType="cq:Widget"
                    defaultValue="5"
                    fieldDescription="Maximum number of items displayed in list"
                    fieldLabel="Limit"
                    name="./limit"
                    xtype="numberfield"/>
            </items>
        </static>
        <search
            jcr:primaryType="cq:Widget"
            title="Search"
            xtype="panel">
            <listeners
                jcr:primaryType="nt:unstructured"
                render="function() { this.findParentByType('tabpanel').hideTabStripItem(5); }"/>
            <items jcr:primaryType="cq:WidgetCollection">
                <searchIn
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Leave empty to use current site (eg. /content/mysite)"
                    fieldLabel="Start in"
                    name="./searchIn"
                    xtype="pathfield"/>
                <query
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Search query"
                    name="./query"
                    xtype="textfield"/>
                <searchLimit
                    jcr:primaryType="cq:Widget"
                    defaultValue="5"
                    fieldDescription="Maximum number of items displayed in list"
                    fieldLabel="Limit"
                    name="./limit"
                    xtype="numberfield"/>
            </items>
        </search>
        <querybuilder
            jcr:primaryType="cq:Widget"
            title="Advanced Search"
            xtype="panel">
            <listeners
                jcr:primaryType="nt:unstructured"
                render="function() { this.findParentByType('tabpanel').hideTabStripItem(6); }"/>
            <items jcr:primaryType="cq:WidgetCollection">
                <savedquery
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Querybuilder predicate notation"
                    name="./savedquery"
                    xtype="textarea"/>
                <queryLimit
                    jcr:primaryType="cq:Widget"
                    defaultValue="5"
                    fieldDescription="Maximum number of items displayed in list"
                    fieldLabel="Limit"
                    name="./limit"
                    xtype="numberfield"/>
            </items>
        </querybuilder>
        <container
            jcr:primaryType="cq:Widget"
            title="Container (parsys)"
            xtype="panel">
            <listeners
                jcr:primaryType="nt:unstructured"
                render="function() { this.findParentByType('tabpanel').hideTabStripItem(7); }"/>
            <items jcr:primaryType="cq:WidgetCollection">
                <limit
                    jcr:primaryType="cq:Widget"
                    defaultValue="3"
                    fieldDescription="number of Slides"
                    fieldLabel="containerSlideCount"
                    name="./containerSlideCount"
                    xtype="numberfield"/>
            </items>
        </container>
    </items>
</jcr:root>
